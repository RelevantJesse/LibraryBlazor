@page "/members/edit/{id:int}"

<h1>Edit Member</h1>

@if (existingMember != null)
{
    <MudForm @ref="@addForm" @bind-IsValid="@success" Model="@existingMember">
        <MudTextField T="string" @bind-Value="@existingMember.FirstName" Label="First Name" Required="true" RequiredError="First Name is required!" />
        <MudTextField T="string" @bind-Value="@existingMember.LastName" Label="Last Name" Required="true" RequiredError="Last Name is required!" />
        <div class="d-flex mt-6">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" OnClick="@(async () => await OnSubmit())">Save</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(async () => OnCancel())" Class="ml-2">Cancel</MudButton>
        </div>
    </MudForm>
}