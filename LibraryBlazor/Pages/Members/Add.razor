@page "/members/add"

<h1>Add Member</h1>

@if (newMember != null)
{
    <MudForm @ref="@addForm" @bind-IsValid="@success" Model="@newMember">
        <MudTextField T="string" @bind-Value="@newMember.FirstName" Label="First Name" Required="true" RequiredError="First Name is required!" />
        <MudTextField T="string" @bind-Value="@newMember.LastName" Label="Last Name" Required="true" RequiredError="Last Name is required!" />
        <div class="d-flex mt-6">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" OnClick="@(async () => await OnSubmit())">Add Member</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(async () => OnCancel())" Class="ml-2">Cancel</MudButton>
        </div>
    </MudForm>
}